<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Foto Profil -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:contentDescription="Foto Mahasiswa"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginBottom="10dp"/>

        <!-- Nama -->
        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage"
            android:layout_centerHorizontal="true"
            android:text="Zio Vallentino Gunawan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <!-- NIM -->
        <TextView
            android:id="@+id/tvNim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNama"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="NIM : E41241132"
            android:textSize="16sp"
            android:textColor="#555"/>

        <!-- Prodi -->
        <TextView
            android:id="@+id/tvProdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tvNim"
            android:layout_toEndOf="@id/tvNim"
            android:layout_marginStart="60dp"
            android:text="Prodi: Teknik Informatika"
            android:textSize="16sp"
            android:textColor="#000"/>

        <!-- Jurusan -->
        <TextView
            android:id="@+id/tvJurusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNim"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:text="Jurusan: Teknologi Informasi"
            android:textColor="#000"
            android:textSize="16sp" />

        <!-- Card Jadwal -->
        <LinearLayout
            android:id="@+id/cardJadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvJurusan"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📅 Jadwal Mata Kuliah"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Matematika Diskrit - Senin 08:00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Konsep Jaringan Komputer - Senin 10:00"/>
        </LinearLayout>

        <!-- Card Informasi -->
        <LinearLayout
            android:id="@+id/cardInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardJadwal"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ℹ️ Informasi Tambahan"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matematika Diskrit → 2 SKS, Dosen: Pak Munih, Ruang: Lantai 4.1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konsep Jaringan Komputer → 2 SKS, Dosen: Pak Agus Purwadi, Ruang: Lantai 4.1"/>
        </LinearLayout>

        <!-- Dua card sejajar: Kontak & Hobi -->
        <LinearLayout
            android:id="@+id/rowCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardInfo"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/cardKontak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📞 Kontak"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email : ziosaja5@gmail.com"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HP : 0822-8315-6617"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardHobi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎯 Hobi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Coding"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Gaming"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Tombol Aksi sejajar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rowCards"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Detail"
                android:backgroundTint="#4CAF50"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/btnExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Keluar"
                android:backgroundTint="#F44336"
                android:textColor="#fff"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
